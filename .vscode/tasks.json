{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-parkinglot",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/build/parkinglot",
                "${workspaceFolder}/src/main.cpp",
                "`fltk-config --cxxflags --ldflags`"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile FLTK parking lot application"
        },
        {
            "label": "clean-build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "${workspaceFolder}/build/parkinglot"
            ],
            "group": "build"
        }
    ]
}